<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/itemLayout1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_bureau_interstate_regular"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:text="Praveen"/>

        <TextView android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/font_bureau_interstate_regular"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Praveen"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_toEndOf="@+id/itemLayout1"
        android:id="@+id/itemLayout2"
        android:layout_marginStart="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/relationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_bureau_interstate_regular"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Praveen"/>

        <TextView android:id="@+id/preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_bureau_interstate_regular"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal"
            tools:text="Praveen"/>

    </LinearLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/imgEdit"
            android:layout_alignParentEnd="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/edit"/>


</RelativeLayout>
</androidx.cardview.widget.CardView>